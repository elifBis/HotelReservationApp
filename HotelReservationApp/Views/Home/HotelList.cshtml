
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

@model List<Hotel>


<!doctype html>
<html lang="zxx">

<body>



    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Oteller</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="#url">Anasayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Oteller </li>
                </ul>
            </div>
        </div>
    </section>



    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">

                <h3 class="hny-title mb-5">Oteller</h3>

                <div class="row">
                    @foreach (var hotel in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6">

                            <div class="column">

                                <a href="@Url.Action("Details", "Hotel", new { id = hotel.Id })"><img src="@hotel.ImageUrl" alt="" class="img-fluid"></a>
                                <div class="info">
                                    <h4><a href="@Url.Action("Details", "Hotel", new { id = hotel.Id })">@hotel.City</a></h4>
                                    <p>@hotel.Name</p>
                                    <div class="dst-btm">
                                        <h6 class="">@hotel.Description</h6>
                                        <a href="@Url.Action("Details", "Hotel", new { id = hotel.Id })">Detayları Gör</a>
                                    </div>
                                </div>

                            </div>

                        </div>
                    }

                </div>


            </div>
        </div>

    </section>







</body>

</html>